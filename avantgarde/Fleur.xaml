<Page
    x:Class="avantgarde.Fleur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:gaze="using:Microsoft.Toolkit.Uwp.Input.GazeInteraction"
    xmlns:local="using:avantgarde"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:syncfusion="clr-namespace:Syncfusion.SfImageEditor.XForms;assembly=Syncfusion.SfImageEditor.XForms"
    xmlns:uc1="using:avantgarde.Joysticks"
    xmlns:uc2="using:avantgarde.Menus"
    gaze:GazeInput.Interaction="Enabled"
    gaze:GazeInput.IsCursorVisible="True"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="TopGrid">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Background="{x:Bind backgroundHex, Mode=OneWay}">


            <InkCanvas x:Name="inkCanvas" Canvas.ZIndex="0" />

            <uc2:UI
                x:Name="ui"
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Canvas.ZIndex="2" />

            <Canvas
                x:Name="canvas"
                Background="Transparent"
                Canvas.ZIndex="1">
                <controls:RadialProgressBar
                    x:Name="radialProgressBar"
                    Width="50"
                    Height="50"
                    Canvas.ZIndex="0"
                    Foreground="Black"
                    Maximum="100"
                    Minimum="0"
                    Thickness="3"
                    Visibility="Visible"
                    Value="0" />
                <uc1:VerticalJoystick
                    x:Name="canvasJoystick"
                    Width="200"
                    Height="200"
                    Visibility="Collapsed" />
            </Canvas>

            <Grid
                x:Name="blockGrid"
                Grid.Row="1"
                Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border
                    Grid.Column="0"
                    BorderBrush="DimGray"
                    BorderThickness="0,0,3,0">
                    <Canvas
                        x:Name="leftBlock"
                        Background="#303030"
                        Visibility="Visible" />
                </Border>

                <Border
                    Grid.Column="2"
                    BorderBrush="DimGray"
                    BorderThickness="3,0,0,0">
                    <Canvas
                        x:Name="rightBlock"
                        Background="#303030"
                        Visibility="Visible" />
                </Border>
            </Grid>
        </Grid>

    </Grid>
</Page>
