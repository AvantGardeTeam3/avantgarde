<UserControl
    x:Class="avantgarde.Menus.UI"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:avantgarde.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:avantgarde.Menus"
    d:DesignHeight="{x:Bind HEIGHT}"
    d:DesignWidth="{x:Bind WIDTH}"
    mc:Ignorable="d">

    <Grid>
        <uc:ColourManager x:Name="colourManager" />
        <uc:LibreToolBox x:Name="libreToolBox"/>
        <Button
            Width="100"
            Height="100"
            VerticalAlignment="Top"
            Background="Coral"
            CornerRadius="0,0,5,0"
            Click="initToolbox"
            >
            
            <Image
                Width="60"
                Height="60"
                Source="/Assets/icons/icon_menu2.png" />
        </Button>

        <Border
            Width="300"
            Height="100"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="#ff728e"
            CornerRadius="0,0,0,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                
                <Button
                    Grid.Column="2"
                    Width="80"
                    Height="80"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="{x:Bind colourHex, Mode=OneWay}"
                    BorderBrush="White"
                    BorderThickness="2"
                    Click="initColourManager"
                    CornerRadius="5,5,5,5" />

                <Button
                    Grid.Column="1"
                    Width="100"
                    Height="80"
                    HorizontalAlignment="Right"
                    Background="Transparent"
                    Click="undo">
                    <Image Source="/Assets/icons/icon_undo.png" />
                </Button>
                <Button
                    Grid.Column="0"
                    Width="100"
                    Height="80"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Click="redo">
                    <Image Source="/Assets/icons/icon_redo.png" />
                </Button>
            </Grid>
        </Border>

        <Button
            Width="100"
            Height="100"
            Margin="0,0,0,50"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Background="LightGray"
            Click="changeDrawState"
            CornerRadius="5,5,5,5"
            Opacity="0.50">
            <Image
                Width="60"
                Height="60"
                Source="{x:Bind drawStateIcon, Mode=OneWay}" />
        </Button>
    </Grid>
</UserControl>
