<UserControl
    x:Class="avantgarde.Menus.LibreToolBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:avantgarde.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:avantgarde.Menus"
    d:DesignHeight="{x:Bind HEIGHT}"
    d:DesignWidth="{x:Bind WIDTH}"
    mc:Ignorable="d">

    <Popup x:Name="libreToolBox">

        <Grid Width="{x:Bind WIDTH}" Height="{x:Bind HEIGHT}">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <uc:ColourManager x:Name="colourManager" />
            <uc:ConfirmTool x:Name="confirmTool" />

            <Border
                Width="120"
                Height="750"
                Background="Black"
                BorderBrush="#4ffff6"
                BorderThickness="2"
                CornerRadius="5,5,5,5"
                Opacity="0.3" />
            <Border
                Grid.Column="0"
                Width="120"
                Height="750"
                Background="Transparent"
                BorderBrush="#4ffff6"
                BorderThickness="2"
                CornerRadius="5,5,5,5">
                <StackPanel
                    Width="Auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="15">

                    <Grid>
                        <Border
                            Width="80"
                            Height="80"
                            Background="#4ffff6"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="5,5,5,5"
                            Opacity="0.80"
                            Visibility="{x:Bind paintbrushButtonState, Mode=OneWay}" />
                        <Button
                            Width="80"
                            Height="80"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Click="selectPaintbrush">
                            <Image Source="/Assets/icons/icon_paintbrush.png" />
                        </Button>
                    </Grid>
                    <Grid>
                        <Border
                            Width="80"
                            Height="80"
                            Background="#4ffff6"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="5,5,5,5"
                            Opacity="0.80"
                            Visibility="{x:Bind pencilButtonState, Mode=OneWay}" />
                        <Button
                            Width="80"
                            Height="80"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Click="selectPencil">
                            <Image Source="/Assets/icons/icon_pencil.png" />
                        </Button>
                    </Grid>
                    <Grid>
                        <Border
                            Width="80"
                            Height="80"
                            Background="#4ffff6"
                            BorderBrush="White"
                            BorderThickness="2"
                            CornerRadius="5,5,5,5"
                            Opacity="0.80"
                            Visibility="{x:Bind highlighterButtonState, Mode=OneWay}" />
                        <Button
                            Width="80"
                            Height="80"
                            Margin="5"
                            HorizontalAlignment="Center"
                            Background="Transparent"
                            Click="selectHighlighter">
                            <Image Source="/Assets/icons/icon_highlighter.png" />
                        </Button>
                    </Grid>




                    <Button
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="2"
                        CornerRadius="5,5,5,5">
                        <Button.Content>
                            <StackPanel Orientation="Vertical" Spacing="3">
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Tahoma"
                                    FontSize="13"
                                    Foreground="White"
                                    Text="Brush Size" />
                                <TextBlock
                                    Width="100"
                                    Height="30"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontFamily="Tahoma"
                                    FontSize="30"
                                    Foreground="White"
                                    Text="{x:Bind brushSize, Mode=OneWay}"
                                    TextAlignment="Center" />
                            </StackPanel>
                        </Button.Content>
                        <Button.Flyout>
                            <Flyout x:Name="brushSizeFlyout" Placement="Right">
                                <Flyout.FlyoutPresenterStyle>
                                    <Style TargetType="FlyoutPresenter">
                              
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="IsDefaultShadowEnabled" Value="False"/>
                                        <Setter Property="Margin" Value="15,0,0,0"/>
                                        

                                    </Style>
                                </Flyout.FlyoutPresenterStyle>
                                <Grid>
                                    <Border
                                    Grid.Column="0"
                                    Width="100"
                                    Height="155"
                                    Background="Black"
                                    CornerRadius="5,5,5,5"
                                    Opacity="0.30"
                                    />

                                    <Border Padding="10" BorderBrush="#4ffff6"
                                    BorderThickness="2"
                                    CornerRadius="5,5,5,5">
                                        <StackPanel Orientation="Vertical" Spacing="30">
                                            <Button
                                        Width="80"
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        Background="Transparent"
                                        Click="increaseBrushSize">
                                                <Image Source="/Assets/icons/icon_up.png" />
                                            </Button>

                                            <Button
                                        Width="80"
                                        Height="50"
                                        HorizontalAlignment="Center"
                                        Background="Transparent"
                                        Click="decreaseBrushSize">
                                                <Image Source="/Assets/icons/icon_down.png" />
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Flyout>
                        </Button.Flyout>
                    </Button>


                    <!--<Button
                        Width="80"
                        Height="50"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="increaseBrushSize">
                        <Image Source="/Assets/icons/icon_up.png" />
                    </Button>

                    <TextBlock
                        Width="100"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Tahoma"
                        FontSize="30"
                        Foreground="White"
                        Text="{x:Bind brushSize, Mode=OneWay}"
                        TextAlignment="Center" />

                    <Button
                        Width="80"
                        Height="50"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="decreaseBrushSize">
                        <Image Source="/Assets/icons/icon_down.png" />
                    </Button>-->

                    <Button
                        Width="80"
                        Height="80"
                        Margin="5"
                        HorizontalAlignment="Center"
                        Background="{x:Bind colourHex, Mode=OneWay}"
                        BorderBrush="White"
                        BorderThickness="2"
                        Click="initColourManager"
                        CornerRadius="5,5,5,5" />

                    <Button
                        Width="100"
                        Height="100"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="setBackground"
                        CornerRadius="5,5,5,5">
                        <Image Source="/Assets/icons/icon_background.png" />
                    </Button>

                    <Button
                        Grid.Column="0"
                        Width="100"
                        Height="100"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="redo">
                        <Image Source="/Assets/icons/icon_palette.png" />
                    </Button>

                </StackPanel>
            </Border>

            <Border
                Grid.Column="2"
                Width="120"
                Height="750"
                Background="Black"
                CornerRadius="5,5,5,5"
                Opacity="0.3" />
            <Border
                Grid.Column="2"
                Width="120"
                Height="750"
                Background="Transparent"
                BorderBrush="#4ffff6"
                BorderThickness="2"
                CornerRadius="5,5,5,5">
                <StackPanel
                    Width="Auto"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Spacing="25">
                    <Button
                        Width="80"
                        Height="70"
                        HorizontalAlignment="Right"
                        Background="Transparent"
                        Click="undo">
                        <Image Source="/Assets/icons/icon_undo.png" />
                    </Button>
                    <Button
                        Width="80"
                        Height="70"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="redo">
                        <Image Source="/Assets/icons/icon_redo.png" />
                    </Button>

                    <!--<Button
                        Grid.Column="0"
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="redo">
                        <Image Source="/Assets/icons/icon_palette.png" />
                    </Button>-->

                    <Button
                        Width="80"
                        Height="80"
                        Padding="0,0,0,10"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        CornerRadius="5,5,5,5">
                        <Image Source="/Assets/icons/icon_file.png" />
                    </Button>

                    <Button
                        Width="80"
                        Height="80"
                        Padding="0,0,0,10"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="clearCanvas"
                        CornerRadius="5,5,5,5">
                        <Image Source="/Assets/icons/icon_trash.png" />
                    </Button>


                    <Button
                        Width="80"
                        Height="80"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        CornerRadius="5,5,5,5">
                        <Image Source="/Assets/icons/icon_book.png" />
                    </Button>



                    <Button
                        Width="80"
                        Height="80"
                        Padding="0,0,0,10"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="goHome"
                        CornerRadius="5,5,5,5">
                        <Image Source="/Assets/icons/icon_exit.png" />
                    </Button>

                    <Button
                        Width="60"
                        Height="60"
                        Padding="0,0,0,10"
                        HorizontalAlignment="Center"
                        Background="Transparent"
                        Click="closeToolbox"
                        CornerRadius="5,5,5,5">
                        <Image Source="/Assets/icons/icon_x.png" />
                    </Button>
                </StackPanel>
            </Border>

        </Grid>
    </Popup>
</UserControl>
