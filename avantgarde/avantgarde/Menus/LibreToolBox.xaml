<UserControl
    x:Class="avantgarde.Menus.LibreToolBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:avantgarde.Menus"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Popup
        x:Name="libreToolBox"
        HorizontalOffset="{x:Bind horizontalOffset}"
        VerticalOffset="{x:Bind verticalOffset}">
        
    
    <Border
        Width="{x:Bind width}"
        Height="{x:Bind height}"
        Background="Black"
        BorderBrush="#4ffff6"
        BorderThickness="2"
        CornerRadius="5,5,5,5">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="3.2*" />
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="1.5*" />
                <RowDefinition Height="3.2*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="25"
                FontWeight="Bold"
                Foreground="White"
                Text="ToolBox" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="15"
                Foreground="White"
                Text="Brush Size" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="15"
                Foreground="White"
                Text="Background" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="15"
                Foreground="White"
                Text="Tutorial" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="15"
                Foreground="White"
                Text="Save" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="15"
                Foreground="White"
                Text="Load" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="15"
                Foreground="White"
                Text="Close" />
            
            <TextBlock
                Grid.Row="4"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="15"
                Foreground="White"
                Text="Exit" />

            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.ColumnSpan="4" HorizontalAlignment="Center" Spacing="50">
                <Grid>
                    <Border
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="90"
                    Height="90"
                    Background="#4ffff6"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="5,5,5,5"
                    Opacity="0.60"
                    Visibility="{x:Bind paintbrushButtonState, Mode=OneWay}" />
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="90"
                    Height="90"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Click="selectPaintbrush">
                    <Image Source="/Assets/icons/icon_paintbrush.png" />
                </Button>
                    </Grid>
                <Grid>
                    <Border
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="90"
                    Height="90"
                    Background="#4ffff6"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="5,5,5,5"
                    Opacity="0.60"
                    Visibility="{x:Bind pencilButtonState, Mode=OneWay}" />
                <Button
                    Grid.Row="1"
                    Grid.Column="1"
                    Width="90"
                    Height="90"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Click="selectPencil">
                    <Image Source="/Assets/icons/icon_pencil.png" />
                </Button>
                    </Grid>
                <Grid>
                    <Border
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="90"
                    Height="90"
                    Background="#4ffff6"
                    BorderBrush="White"
                    BorderThickness="2"
                    CornerRadius="5,5,5,5"
                    Opacity="0.60"
                    Visibility="{x:Bind highlighterButtonState, Mode=OneWay}" />
                    <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Width="90"
                    Height="90"
                    Margin="5"
                    HorizontalAlignment="Center"
                    Background="Transparent"
                    Click="selectHighlighter">
                        <Image Source="/Assets/icons/icon_highlighter.png" />
                    </Button>
                </Grid>

            </StackPanel>

                        <Button
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="80"
                Height="50"
                HorizontalAlignment="Left"
                Background="Transparent"
                Click="decreaseBrushSize">
                <Image Source="/Assets/icons/icon_left.png" />
            </Button>
            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="100"
                Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Tahoma"
                FontSize="50"
                Foreground="White"
                Text="{x:Bind brushSize, Mode=OneWay}"
                TextAlignment="Center" />
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Width="85"
                Height="50"
                HorizontalAlignment="Right"
                Background="Transparent"
                Click="increaseBrushSize">
                <Image Source="/Assets/icons/icon_right.png" />
            </Button>

            <Button
                Grid.Row="3"
                Grid.Column="3"
                Width="100"
                Height="90"
                HorizontalAlignment="Center"
                Background="Transparent"
                Click="setBackground"
                CornerRadius="5,5,5,5">
                <Image Source="/Assets/icons/icon_book.png" />
            </Button>

            <Button
                Grid.Row="3"
                Grid.Column="2"
                Width="90"
                Height="90"
                HorizontalAlignment="Center"
                Background="Transparent"
                Click="setBackground"
                CornerRadius="5,5,5,5">
                <Image Source="/Assets/icons/icon_background.png" />
            </Button>

            <Button
                Grid.Row="5"
                Grid.Column="0"
                Width="100"
                Height="100"
                HorizontalAlignment="Center"
                Background="Transparent"
                Click="setBackground"
                CornerRadius="5,5,5,5"
                Padding="0,0,0,20">
                <Image Source="/Assets/icons/icon_save.png" />
            </Button>

            <Button
                Grid.Row="5"
                Grid.Column="2"
                Width="80"
                Height="80"
                HorizontalAlignment="Center"
                Background="Transparent"
                Click="goHome"
                CornerRadius="5,5,5,5"
                Padding="0,0,0,10">
                <Image Source="/Assets/icons/icon_exit.png" />
            </Button>

            <Button
                Grid.Row="5"
                Grid.Column="3"
                Width="70"
                Height="70"
                HorizontalAlignment="Center"
                Background="Transparent"
                Click="closeToolbox"
                CornerRadius="5,5,5,5"
                Padding="0,0,0,10">
                <Image Source="/Assets/icons/icon_x.png" />
            </Button>

            <Button
                Grid.Row="5"
                Grid.Column="1"
                Width="70"
                Height="70"
                HorizontalAlignment="Center"
                Background="Transparent"
                Click="closeToolbox"
                CornerRadius="5,5,5,5"
                Padding="0,0,0,10">
                <Image Source="/Assets/icons/icon_file.png" />
            </Button>

        </Grid>
    </Border>
    </Popup>
</UserControl>
